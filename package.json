{
  "name": "ts-node-template",
  "version": "1.0.0",
  "description": "NodeJS typescript module template",
  "main": "dist/index.js",
  "repository": "https://github.com/zhelvis/ts-node-template.git",
  "author": "Vladimir Zhelvis <zhelvisvladimir@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@swc/core": "^1.3.63",
    "@swc/register": "^0.1.10",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^10.2.7",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "lint": "eslint --fix src/**/*",
    "test": "glob -c \"node -r ts-node/register --test\" \"./src/**/*.spec.ts\"",
    "pre-commit": "lint-staged && npm test",
    "docs": "typedoc --entryPoints src/index.ts",
    "dev": "tsnd --respawn src/index.ts",
    "build": "tsc"
  },
  "lint-staged": {
    "src/**/*.{js,ts,json}": [
      "eslint"
    ]
  }
}
