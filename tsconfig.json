{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "dist",
      "types": [
        "node",
        "jest"
      ],
      "lib": [
        "es2022"
      ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
    "ts-node": {
      "swc": true
    }
  }